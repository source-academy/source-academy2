<%= render "tabs.html", conn: @conn %>

<% assessments = @assessments
    |> Enum.sort_by(&(&1.name), &(elem(Float.parse(&1),0) <= elem(Float.parse(&2),0))) %>

<%= for assessment <- assessments do %>
  <%= render SourceAcademyWeb.AssessmentView, "card.html",
        conn: @conn,
        assessment: assessment,
        submission: Enum.find(@submissions,
            &(&1.assessment_id == assessment.id)) %>
<% end %>
